{
  "name": "the-words",
  "version": "1.0.0",
  "description": "Random quote machine",
  "main": "app.js",
  "scripts": {
    "concat:css": "concat -o css/style.concat.css css/normalize.css css/style.css",
    "prefix:css": "postcss --use autoprefixer -b 'last 10 versions' css/style.concat.css -o css/style.prefix.css",
    "compress:css": "node-sass css/style.prefix.css css/style.min.css --output-style compressed",
    "build:css": "npm-run-all concat:css prefix:css compress:css"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/olbesp/the-words.git"
  },
  "author": "Oleksii Bespalko",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/olbesp/the-words/issues"
  },
  "homepage": "https://github.com/olbesp/the-words#readme",
  "devDependencies": {
    "autoprefixer": "^7.1.6",
    "concat": "^1.0.3",
    "node-sass": "^4.7.2",
    "npm-run-all": "^4.1.2",
    "postcss-cli": "^4.1.1"
  }
}
